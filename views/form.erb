<!-- Book Review Form -->
<form name="myform" method="post" action="/write">
  <div id="results">
    <h2>Reviews</h2>
    <ul>
    <% @results.each do |result| %>

    <%= "<li><span class='label'>#{result[1]} by #{result[2]}:</span><span class='value'>  #{result[3]} </span></li>" %>

    <% end %>
  </ul>
  </div>
  <div id="review">
    <h2>Submit Book Review</h2>
    <input type="text" name="title" placeholder="<book title>"  required focus /></br>
    <input type="text" name="author" placeholder="<author>"  required /></br>
    <textarea rows="3" cols"40" wrap="hard"  name="review" placeholder="             <review>"  required /></textarea>
  </div>
   <div>
    <button type="submit">Submit</button>
  </div>
</form>